block content
	div.section.intro.active
		img#introImage(src="/img/giftest1.gif", alt="")
		//- video#introVideo(width="100%", height="100%", autoplay, loop)
		//- 	source(src="/asset/vid-idle2.mp4", type="video/mp4")
	
	div.section.ready
		div.readyTxt
		div.readyCountdown
		div.readyBottom

	div.section.game
		div.mainTitle
		div.gameCountdown
		div.content
			div.contains
				div.rig.level1
